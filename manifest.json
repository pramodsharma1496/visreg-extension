{
  "manifest_version": 3,
  "name": "VisReg - Visual Regression Tester",
  "version": "2.1.0",
  "description": "Automated visual testing with smart masking and report export.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "offscreen"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Visual Regression Tester"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}